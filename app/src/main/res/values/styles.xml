<resources xmlns:tools="http://schemas.android.com/tools">

    <!--APP THEME BASE-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorControlNormal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/colorControlNormal</item>
    </style>

    <!-- NORMAL APPLICATION THEME-->
    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!--TOOLBAR STYLES-->
    <!-- Toolbar Style -->
    <style name="AppToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppToolbar.Dark">
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="AppToolbar.Dark.Back">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppActionBar.Default" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>


    <!-- EditText Style -->
    <style name="LightEditText" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorTextInput</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorTextInput</item>
    </style>
    <!-- EditText Style ERROR -->
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--THEME FOR PROGRESS BAR-->
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@android:color/white</item> <!-- Whatever color you want-->
    </style>

</resources>
